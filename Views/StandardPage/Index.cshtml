@using Grademoepi
@model PageViewModel<StandardPage>

@{ Layout = "~/Views/Shared/Layouts/_LeftNavigation.cshtml"; }

<h1>@Html.PropertyFor(x => x.CurrentPage.PageName)</h1>
<p class="introduction">@Html.PropertyFor(x => x.CurrentPage.MetaDescription)</p>
<div class="row">
    <div class="col-md-8 clearfix">
        @Html.PropertyFor(m => m.CurrentPage.MainBody)
    </div>
</div>
@Html.PropertyFor(x => x.CurrentPage.MainContentArea, new { CssClass = "row", Tag = Global.ContentAreaTags.TwoThirdsWidth })
